<queue-entries>

  <!-- Sends invitation email to referred users. -->
  <queue>
    <name>invite-user</name>
    <rate>1/s</rate>
    <bucket-size>1</bucket-size>
    <max-concurrent-requests>1</max-concurrent-requests>
    <retry-parameters>
      <task-age-limit>90d</task-age-limit>
      <min-backoff-seconds>300</min-backoff-seconds>
      <max-backoff-seconds>300</max-backoff-seconds>
    </retry-parameters>
  </queue>
  
  <!-- Sends welcome email newly registered users. -->
  <queue>
    <name>welcome-user</name>
    <target>default</target>
    <rate>1/s</rate>
    <bucket-size>1</bucket-size>
    <max-concurrent-requests>1</max-concurrent-requests>
    <retry-parameters>
      <task-age-limit>90d</task-age-limit>
      <min-backoff-seconds>300</min-backoff-seconds>
      <max-backoff-seconds>300</max-backoff-seconds>
    </retry-parameters>
  </queue>
  
  <!-- Re-set user password and send an email regarding the same. -->
  <queue>
    <name>reset-password</name>
    <target>default</target>
    <rate>1/s</rate>
    <bucket-size>1</bucket-size>
    <max-concurrent-requests>1</max-concurrent-requests>
    <retry-parameters>
      <task-age-limit>90d</task-age-limit>
      <min-backoff-seconds>300</min-backoff-seconds>
      <max-backoff-seconds>300</max-backoff-seconds>
    </retry-parameters>
  </queue>

  <!-- Pratilipi Data/Content offline processing. -->
  <queue>
    <name>pratilipi</name>
    <target>api</target>
    <rate>1/s</rate>
    <bucket-size>1</bucket-size>
    <max-concurrent-requests>1</max-concurrent-requests>
    <retry-parameters>
      <task-age-limit>90d</task-age-limit>
      <min-backoff-seconds>300</min-backoff-seconds>
      <max-backoff-seconds>300</max-backoff-seconds>
    </retry-parameters>
  </queue>
  
  <!-- Author Data offline processing. -->
  <queue>
    <name>author</name>
    <target>api</target>
    <rate>1/s</rate>
    <bucket-size>1</bucket-size>
    <max-concurrent-requests>1</max-concurrent-requests>
    <retry-parameters>
      <task-age-limit>90d</task-age-limit>
      <min-backoff-seconds>300</min-backoff-seconds>
      <max-backoff-seconds>300</max-backoff-seconds>
    </retry-parameters>
  </queue>
  
  <!-- Notification -->
  <queue>
    <name>notification</name>
    <target>default</target>
    <rate>1/s</rate>
    <bucket-size>1</bucket-size>
    <max-concurrent-requests>1</max-concurrent-requests>
    <retry-parameters>
      <task-age-limit>90d</task-age-limit>
      <min-backoff-seconds>300</min-backoff-seconds>
      <max-backoff-seconds>300</max-backoff-seconds>
    </retry-parameters>
  </queue>
  
</queue-entries>