<?xml version="1.0" encoding="utf-8"?>
<web-app
        version="2.5"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<filter>
		<filter-name>GenericServiceFilter</filter-name>
		<filter-class>com.pratilipi.api.GenericServiceFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>GenericServiceFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>AndroidService</servlet-name>
		<servlet-class>com.pratilipi.service.AndroidService</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>AndroidService</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

</web-app>