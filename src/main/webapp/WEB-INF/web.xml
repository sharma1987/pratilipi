<?xml version="1.0" encoding="utf-8"?>
<web-app
        version="2.5"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
	<filter>
		<filter-name>PratilipiSiteFilter</filter-name>
		<filter-class>com.pratilipi.site.PratilipiSiteFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>PratilipiSiteFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>UxModeFilter</filter-name>
		<filter-class>com.pratilipi.site.UxModeFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>UxModeFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>AccessTokenFilter</filter-name>
		<filter-class>com.pratilipi.site.AccessTokenFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AccessTokenFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>PratilipiSite</servlet-name>
		<servlet-class>com.pratilipi.site.PratilipiSite</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PratilipiSite</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

</web-app>
