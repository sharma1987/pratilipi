<?xml version="1.0" encoding="utf-8"?>
<web-app
        version="2.5"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<filter>
		<filter-name>PratilipiWorkerFilter</filter-name>
		<filter-class>com.pratilipi.worker.PratilipiWorkerFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>PratilipiWorkerFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>PratilipiWorker</servlet-name>
		<servlet-class>com.pratilipi.worker.PratilipiWorker</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>PratilipiWorker</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

	<!-- Security Constraints -->
	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>admin</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
    
</web-app>