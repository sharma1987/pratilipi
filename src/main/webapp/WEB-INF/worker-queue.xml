<queue-entries>

  <!-- Sends invitation email to referred users. -->
  <queue>
    <name>invite-user</name>
    <target>www</target>
    <rate>1/s</rate>
    <bucket-size>1</bucket-size>
    <max-concurrent-requests>1</max-concurrent-requests>
    <retry-parameters>
      <task-age-limit>90d</task-age-limit>
      <min-backoff-seconds>300</min-backoff-seconds>
      <max-backoff-seconds>300</max-backoff-seconds>
    </retry-parameters>
  </queue>
  
  <!-- Re-set user password and send an email regarding the same. -->
  <queue>
    <name>reset-password</name>
    <target>www</target>
    <rate>1/s</rate>
    <bucket-size>1</bucket-size>
    <max-concurrent-requests>1</max-concurrent-requests>
    <retry-parameters>
      <task-age-limit>90d</task-age-limit>
      <min-backoff-seconds>300</min-backoff-seconds>
      <max-backoff-seconds>300</max-backoff-seconds>
    </retry-parameters>
  </queue>






	<!-- User Data real-time & offline processing. -->
	
	<queue>
		<name>user</name>
		<target>worker</target>
		<rate>100/s</rate>
		<bucket-size>10</bucket-size>
		<max-concurrent-requests>10</max-concurrent-requests>
		<retry-parameters>
			<task-age-limit>90d</task-age-limit>
			<min-backoff-seconds>5</min-backoff-seconds>
			<max-backoff-seconds>300</max-backoff-seconds>
			<max-doublings>2</max-doublings>
		</retry-parameters>
	</queue>
	
	<queue>
		<name>user-offline</name>
		<target>worker</target>
		<rate>1/s</rate>
		<bucket-size>10</bucket-size>
		<max-concurrent-requests>10</max-concurrent-requests>
		<retry-parameters>
			<task-age-limit>90d</task-age-limit>
			<min-backoff-seconds>60</min-backoff-seconds>
			<max-backoff-seconds>10800</max-backoff-seconds>
			<max-doublings>2</max-doublings>
		</retry-parameters>
	</queue>
	

	<!-- Pratilipi Data/Content real-time & offline processing. -->

	<queue>
		<name>pratilipi</name>
		<target>worker</target>
		<rate>100/s</rate>
		<bucket-size>10</bucket-size>
		<max-concurrent-requests>10</max-concurrent-requests>
		<retry-parameters>
			<task-age-limit>90d</task-age-limit>
			<min-backoff-seconds>5</min-backoff-seconds>
			<max-backoff-seconds>300</max-backoff-seconds>
			<max-doublings>2</max-doublings>
		</retry-parameters>
	</queue>

	<queue>
		<name>pratilipi-offline</name>
		<target>worker</target>
		<rate>10/s</rate>
		<bucket-size>10</bucket-size>
		<max-concurrent-requests>10</max-concurrent-requests>
		<retry-parameters>
			<task-age-limit>90d</task-age-limit>
			<min-backoff-seconds>60</min-backoff-seconds>
			<max-backoff-seconds>10800</max-backoff-seconds>
			<max-doublings>2</max-doublings>
		</retry-parameters>
	</queue>


	<!-- Author Data real-time processing. -->
	
	<queue>
		<name>author</name>
		<target>worker</target>
		<rate>100/s</rate>
		<bucket-size>10</bucket-size>
		<max-concurrent-requests>10</max-concurrent-requests>
		<retry-parameters>
			<task-age-limit>90d</task-age-limit>
			<min-backoff-seconds>5</min-backoff-seconds>
			<max-backoff-seconds>300</max-backoff-seconds>
			<max-doublings>2</max-doublings>
		</retry-parameters>
	</queue>

	<queue>
		<name>author-offline</name>
		<target>worker</target>
		<rate>10/s</rate>
		<bucket-size>10</bucket-size>
		<max-concurrent-requests>10</max-concurrent-requests>
		<retry-parameters>
			<task-age-limit>90d</task-age-limit>
			<min-backoff-seconds>60</min-backoff-seconds>
			<max-backoff-seconds>10800</max-backoff-seconds>
			<max-doublings>2</max-doublings>
		</retry-parameters>
	</queue>




  <!-- Notification -->
  <queue>
    <name>notification</name>
    <target>www</target>
    <rate>1/s</rate>
    <bucket-size>1</bucket-size>
    <max-concurrent-requests>1</max-concurrent-requests>
    <retry-parameters>
      <task-age-limit>90d</task-age-limit>
      <min-backoff-seconds>300</min-backoff-seconds>
      <max-backoff-seconds>300</max-backoff-seconds>
    </retry-parameters>
  </queue>
  
</queue-entries>